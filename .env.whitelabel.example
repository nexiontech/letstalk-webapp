# White Label Configuration Example
# Copy this file to .env.local and modify the values to customize your branding
# All white label environment variables use the VITE_WL_ prefix

# =============================================================================
# APPLICATION BRANDING
# =============================================================================

# Application name and titles
VITE_WL_APP_NAME=MyApp
VITE_WL_APP_SHORTNAME=MyApp
VITE_WL_APP_FULLNAME=MyApp - Citizen Engagement Platform
VITE_WL_APP_TAGLINE=Your digital government platform
VITE_WL_APP_DESCRIPTION=Connect with government services, report issues, and engage with your community through our comprehensive digital platform.

# =============================================================================
# COMPANY INFORMATION
# =============================================================================

# Company branding
VITE_WL_COMPANY_NAME=YourCompany
VITE_WL_COMPANY_FULLNAME=Your Company Ltd
VITE_WL_COMPANY_DESCRIPTION=Leading provider of digital government solutions and citizen engagement platforms.
VITE_WL_COMPANY_FOUNDINGYEAR=2024

# =============================================================================
# DOMAINS AND URLS
# =============================================================================

# Primary domains
VITE_WL_DOMAINS_PRIMARY=https://yourapp.com
VITE_WL_DOMAINS_COMPANY=https://yourcompany.com
VITE_WL_DOMAINS_SUPPORT=https://support.yourapp.com

# =============================================================================
# CONTACT INFORMATION
# =============================================================================

# Contact details
VITE_WL_CONTACT_EMAIL=info@yourapp.com
VITE_WL_CONTACT_SUPPORT=support@yourapp.com
VITE_WL_CONTACT_SECURITY=security@yourcompany.com
VITE_WL_CONTACT_PHONE=+1-555-123-4567

# =============================================================================
# SOCIAL MEDIA
# =============================================================================

# Social media handles (without @ symbol for Twitter)
VITE_WL_SOCIAL_TWITTER=YourCompany
VITE_WL_SOCIAL_FACEBOOK=YourCompany
VITE_WL_SOCIAL_LINKEDIN=company/yourcompany
VITE_WL_SOCIAL_YOUTUBE=YourCompany
VITE_WL_SOCIAL_INSTAGRAM=yourcompany

# =============================================================================
# REGIONAL SETTINGS
# =============================================================================

# Geographic and language settings
VITE_WL_REGION_COUNTRY=US
VITE_WL_REGION_COUNTRYNAME=United States
VITE_WL_REGION_LANGUAGE=en-US
VITE_WL_REGION_CURRENCY=USD
VITE_WL_REGION_TIMEZONE=America/New_York
VITE_WL_REGION_REGION=United States

# =============================================================================
# VISUAL BRANDING
# =============================================================================

# Colors (hex codes)
VITE_WL_BRANDING_PRIMARYCOLOR=#1976d2
VITE_WL_BRANDING_SECONDARYCOLOR=#ffffff
VITE_WL_BRANDING_ACCENTCOLOR=#ff5722

# Asset paths (relative to public folder)
VITE_WL_BRANDING_LOGOPATH=/your-logo.png
VITE_WL_BRANDING_FAVICONPATH=/your-favicon.png
VITE_WL_BRANDING_OGIMAGEPATH=/your-og-image.jpg
VITE_WL_BRANDING_APPSCREENSHOTPATH=/your-app-screenshot.jpg
VITE_WL_BRANDING_TWITTERCARDPATH=/your-twitter-card.jpg

# =============================================================================
# SEO CONFIGURATION
# =============================================================================

# SEO keywords (comma-separated)
VITE_WL_SEO_KEYWORDS=government services,digital platform,citizen engagement,public services,municipal services

# Analytics IDs
VITE_WL_SEO_GOOGLEANALYTICSID=G-XXXXXXXXXX
VITE_WL_SEO_GOOGLEADSENSEID=ca-pub-XXXXXXXXXXXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features (true/false)
VITE_WL_FEATURES_MULTILANGUAGE=true
VITE_WL_FEATURES_PAYMENTPROCESSING=true
VITE_WL_FEATURES_SERVICEREPORTING=true
VITE_WL_FEATURES_COMMUNITYHUB=true
VITE_WL_FEATURES_GOVERNMENTSERVICES=true
VITE_WL_FEATURES_REALTIMEALERTS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development and testing flags
VITE_BYPASS_AUTH=false
VITE_DEBUG=false
VITE_MAINTENANCE_MODE=false
