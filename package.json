    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@reduxjs/toolkit": "^2.7.0",
    "aws-amplify": "^6.14.3",
    "bootstrap": "^5.3.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.5.1"
