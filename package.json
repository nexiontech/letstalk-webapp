    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=high",
    "seo:verify": "node scripts/verify-seo-assets.js",
    "seo:build": "npm run seo:verify && npm run build",
    "sitemap:test": "node scripts/test-sitemap.js",
    "sitemap:test:prod": "node scripts/test-sitemap.js --production",
    "adsense:validate": "node scripts/validate-adsense.js",
    "adsense:check": "npm run adsense:validate",
    "blog:setup-images": "node scripts/setup-blog-images.js",
    "blog:fetch-images": "node scripts/fetch-municipal-images.js",
    "blog:integrate-images": "node scripts/integrate-blog-images.js",
